void() SBFireInterface =
{
	if (CheckHaxxx() == 0) return;

	local entity oself;
	local entity targ;
	local float hackThis;
	local string st;

	targ = self.martyr_enemy;
	hackThis = self.has_camera;   

	oself = self;

	self = self.owner;

	oself.think = SUB_Remove;	
	oself.nextthink = 0.1;
	dremove(oself);

	self.is_haxxxoring = 0;

	self.tfstate = self.tfstate - (self.tfstate & 65536);
	TeamFortress_SetSpeed(self);

	if (hackThis == -2)
	{
		sprint(self, 2, "Hack aborted.\n");
		return;
	}

	if (targ.classname == "player" && (targ.cutf_items & 128))
	{
		if (!Teammate(targ.team_no, self.team_no))
		{
			targ.is_malfunctioning = 1;
			sprint(targ, 2, "Oh no! Your cybernetic augmentations are malfunctioning!\n");
			sprint(self, 2, "You tamper with ", targ.netname, "'s cybernetic augmentations.\n");
		}
		else if (Teammate(targ.team_no,self.team_no) && targ.is_malfunctioning)
		{
			targ.is_malfunctioning = 0;
			sprint(targ, 2, self.netname, " adjusts your cybernetics to work properly again.\n");
			sprint(self, 2, "You readjust ", targ.netname, "'s CyberAugs to work properly again.\n");
		}
	}
	else if (IsBuilding(targ))
	{
		if (!Teammate(targ.real_owner.team_no, self.team_no) && GetICELevel(targ)==1 && random() < 0.2)
		{
			sprint(self, 2, "This device has a level 1 ICE, it's not easy to hack!\n");
			//sprint(targ.real_owner, #PRINT_HIGH,"Somebody tried to hack your stuff...\n");
			return;
		}
		if (!Teammate(targ.real_owner.team_no, self.team_no) && GetICELevel(targ)==2)
		{
			sprint(self, 2, "This device is hack-protected.\n");
			sprint(targ.real_owner, 2,"Somebody just tried to hack your stuff...\n");
			return;
		}
		if (!Teammate(targ.real_owner.team_no, self.team_no) && GetICELevel(targ)==3)
		{
			sprint(self, 2, "This device is hack-protected with a level 3 ICE!\n");
			deathmsg=53;
			TF_T_Damage(self, self, targ, self.health + 50, 1, 0);
			
			sound (self, 6, "effects/crunch.wav", 1, 0);

			return;
		}
		
		MuzzleFlash(targ);
		sound(targ,6,"weapons/cambeep.wav",1, 1);

		BackFlash(self,1);
		
		if (!Teammate(targ.real_owner.team_no, self.team_no))
		{
			sprint(self, 2, "You make a few adjustments...\n");
			if (hackThis == 1)
			{
				targ.is_malfunctioning = targ.is_malfunctioning | 1;
				if (targ.classname == "building_sentrygun") // 
					sprint(self, 2, "The sentrygun is now incapacitated.\n");
				else if (targ.classname == "building_tesla")
					sprint(self, 2, "The tesla won't shoot any more.\n");
				else if (targ.classname == "building_sensor")
					sprint(self, 2, "Better when it doesn't make so much noise.\n");
				else if (targ.classname == "building_dispenser")
					sprint(self, 2, "This is one dispenser that won't dispense any more.\n");
				else if (targ.classname == "building_camera")
					sprint(self, 2, "The camera won't be reporting to its owner any longer, but to all outward appearances remains the same.\n");
				else if (targ.classname == "building_teleporter")
					sprint(self, 2, "The teleporter will now strip the items off all who enter...\n");
				else if (targ.classname == "building_fieldgen")
					sprint(self, 2, "The field generator is now rigged to hurt teammates...\n");
			}
			else if (hackThis == 2)
			{
				targ.is_malfunctioning = targ.is_malfunctioning | 2;
				if (targ.classname == "building_sentrygun")
					sprint(self, 2, "The sentrygun's accuracy is now reduced.\n");
				else if (targ.classname == "building_tesla")
					sprint(self, 2, "This tesla won't put out enough amperage to hurt a fly.\n");
				else if (targ.classname == "building_camera")
					sprint(self, 2, "The camera is silenced.\n");
				else if (targ.classname == "building_sensor")
					sprint(self, 2, "That glow was always pretty annoying anyway.\n");
				else if (targ.classname == "building_dispenser")
				{
					sprint(self, 2, "The dispenser is now rigged to explode!\n");
					targ.martyr_enemy = self;
				}
				else if (targ.classname == "building_teleporter")
				{
					sprint(self, 2, "Entering this teleporter could be unhealthy...\n");
					targ.martyr_enemy = self;
				}
				else if (targ.classname == "building_fieldgen")
				{
					sprint(self, 2, "Better not use a spanner on this one...\n");
					//targ.martyr_enemy = self; // FIX: used on fieldgens to point to field
				}
			}
			else if (hackThis == 4)
			{
				targ.is_malfunctioning = targ.is_malfunctioning | 4;
				if (targ.classname == "building_sentrygun")
					sprint(self, 2, "The sentrygun rocket launcher will now malfunction...\n");
				else if (targ.classname == "building_tesla")
					sprint(self, 2, "The tesla may experience some technical difficulties the next time it fires...\n");
				else if (targ.classname == "building_camera")
					sprint(self, 2, "This camera will be reading ghosts now...\n");
				else if (targ.classname == "building_dispenser")
					sprint(self, 2, "The dispenser will no longer regenerate ammo.\n");
				else if (targ.classname == "building_teleporter")
					sprint(self, 2, "The teleporter will now teleport directly to its builder!\n");
				else if (targ.classname == "building_sensor")
					sprint(self, 2, "The sensor is now off.\n");
				else if (targ.classname == "building_fieldgen")
					sprint(self, 2, "The field generator won't hurt too much now.\n");
			}
			else if (hackThis == 8)
			{
				if (targ.classname != "building_dispenser" && targ.classname != "building_teleporter" && targ.classname != "building_fieldgen")
				{
					st=GetBuildingName(targ);

					sprint(targ.real_owner, 2,"You've lost the control of your ");
					sprint(targ.real_owner, 2, st);
					sprint(targ.real_owner, 2, "!!\n");

					sprint (self, 2, "The ");
					sprint (self, 2, st);
					sprint (self,2," is now yours!\n");	

					teamprefixsprint(self.team_no,self);
					teamsprint6(self,self.netname," hacked ",targ.real_owner.netname,"'s ",st,", now it's ours!\n");

					teamprefixsprint(targ.real_owner.team_no,targ.real_owner);
					teamsprint6(targ.real_owner,targ.real_owner.netname," has lost the control of his ",st,"!\n","","");

					if (targ.classname == "building_sentrygun")
					{
						targ.real_owner.has_sentry = targ.real_owner.has_sentry - (targ.real_owner.has_sentry & targ.dont_do_triggerwork);
						targ.dont_do_triggerwork = 0;
						//self.has_sentry = #TRUE;
					}
					else if (targ.classname == "building_tesla")
					{
						targ.real_owner.has_tesla = targ.real_owner.has_tesla - (targ.real_owner.has_tesla & targ.dont_do_triggerwork);
						targ.dont_do_triggerwork = 0;

						//targ.real_owner.has_tesla = #FALSE;
						//self.has_tesla = #TRUE;
					}
					else if (targ.classname == "building_camera")
					{
						targ.real_owner.has_camera = 0;
						//self.has_camera = #TRUE;
					}
					else if (targ.classname == "building_sensor")
					{
						targ.real_owner.has_sensor = 0;
						//self.has_sensor = #TRUE;
					}

					targ.real_owner = self;
					targ.team_no = self.team_no;				
				}		 
				else if (targ.classname == "building_fieldgen")
				{
					sprint(self, 2, "The field generator is now disabled.\n");
					targ.is_malfunctioning = 8;
				}
				else if (targ.classname == "building_teleporter")
				{
					sprint(self, 2, "The teleporter is now broken.\n");
					targ.is_malfunctioning = 8;
				}
				else if (targ.classname == "building_dispenser")
				{
					sprint(self, 2, "The dispenser will explode when someone attempts to withdraw armour!\n");
					targ.martyr_enemy = self;
					targ.is_malfunctioning = 8;
				}
			}
			else
			{
				sprint(self, 2, "Your attempt at hacking fails.\n");
			}
		}
		else if (Teammate(targ.team_no,self.team_no) && hackThis == -1)
		{
			if (targ.is_malfunctioning)
			{
				targ.is_malfunctioning = 0;

				sprint(self, 2, "You correct the machine's malfunction.\n");

				st=GetBuildingName(targ);

				if (self!=targ.real_owner)
